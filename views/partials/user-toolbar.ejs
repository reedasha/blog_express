<section class="toolbar">
    <% if (session.authorized) { %>
        <p>Hi, <%= session.login %>!</p>
        <form method="POST" action="/logout" style="display:inline">
            <input type="submit" value="logout">
        </form>
    <% } else { %>
        <a href="/login">Login</a>
        <a href="/registrate">Sign up</a>
    <% } %>
</section>
